@using MyEvernote.Web
@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1"><h2>Kategoriler</h2></div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
        <p>
            @Bootstrap.LinkButton("/Category/Create/", "success", string.Empty, string.Empty, "plus"," Ekle")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>

                        @Bootstrap.LinkButton("/Category/Edit/" + @item.Id, "warning", "btn-sm", "Düzenle", "edit", string.Empty)
                        @Bootstrap.LinkButton("/Category/Details/" + @item.Id, "info", "btn-sm", "Detaylar", "search", string.Empty)
                        @Bootstrap.LinkButton("/Category/Delete/" + @item.Id, "danger", "btn-sm", "Sil", "trash", string.Empty)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>