@using MyEvernote.Entities
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Evernote Homepage </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>

<body>
    @{
        EvernoteUser user = null;
        user = Session["login"] as EvernoteUser;

    }
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Menu</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">My EverNote</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (user != null)
                    {
                        <li class="dropdown">
                            <a href="/Note/MyLikedNotes" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-wrench"></span>&nbsp;&nbsp;Yönetim&nbsp;&nbsp; <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/Note/AddNew"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Not Ekle </a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Note/MyNotes"><span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;Notlarım </a></li>
                                <li><a href="/Note/MyLikedNotes"><span class="glyphicon glyphicon-heart"></span>&nbsp;&nbsp;Beğendiklerim </a></li>
                                @if (user.IsAdmin)
                                {
                                    <li role="separator" class="divider"></li>
                                    <li><a href="/Category/AddNew"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Kategori Ekle </a></li>
                                    <li><a href="/Category/List"><span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;Kategoriler </a></li>
                                }
                            </ul>
                        </li>
                    }

                    <li>
                        <a href="/Home/MostLiked">
                            <span class="glyphicon glyphicon-star"></span>&nbsp;&nbsp;En Beğenilenler
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Index">
                            <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;Son Yazılanlar
                        </a>
                    </li>
                    <li>
                        <a href="/Home/About">
                            <span class="glyphicon glyphicon-info-sign"></span>&nbsp;&nbsp;Hakkımızda
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (user == null)
                    {
                        <li>
                            <a href="/Home/Login">
                                <span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Giriş
                            </a>
                        </li>
                        <li>
                            <a href="/Home/Register">
                                <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;Üye Ol
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="/Home/ShowProfile" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;@user.Username &nbsp;&nbsp;<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Home/ShowProfile"><span class="glyphicon glyphicon-user">&nbsp;</span>Profili Göster</a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a href="@Url.Action("EditProfile")"><span class="glyphicon glyphicon-edit">&nbsp;</span>Profili Düzenle</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("DeleteProfile")" onclick="return confirm('Hesabınızı silmek istediğinize emin misiniz?');">
                                    <span class="glyphicon glyphicon-trash">&nbsp;</span>Profili Sil</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Home/Logout">
                                <span class="glyphicon glyphicon-log-out"></span>&nbsp;Çıkış
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    @RenderBody()

    @RenderSection("footer", required: false)

</body>

</html>
